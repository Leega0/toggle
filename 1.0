<script>
(function(k){
k(document).ready(function(){
//加载时隐藏子菜单
   k('li ul').hide();
   //如果不包含子菜单时的鼠标指针和图标
   k('li:not(:has(ul))').css({'cursor':'default','background-image':'none'});
   //包含子菜单时鼠标指针和图标
   k('li:has(ul)').css({'cursor':'pointer','background-image':'url(images/plus.gif)'});
   //单击含子菜单的项
     k('li:has(ul)').click(function(event){
         if(this==event.target){
    k(this).css('background-image',($(this).children().is(':hidden')?'url(images/minu.gif)':'url(images/plus.gif)'));
	  k(this).children().toggle('normal');}
	  })
});})(jQuery);
